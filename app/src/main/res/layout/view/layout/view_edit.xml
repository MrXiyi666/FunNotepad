<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/top_view"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="2dp"
        android:textSize="15sp"
        android:background="@drawable/edit_rect_back"
        android:layout_below="@id/top_view"
        android:layout_above="@id/linear_menu_view"
        android:gravity="start"
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/linear_menu_view"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_file"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back_tran"
            android:text="文件"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_edit"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back_tran"
            android:text="编辑"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_encode"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back_tran"
            android:text="编码"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_style"
            android:layout_margin="10dp"
            android:stateListAnimator="@null"
            android:background="@drawable/button_event_back_tran"
            android:text="样式"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>